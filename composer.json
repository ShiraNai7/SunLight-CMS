{
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=5.3.0",
        "ext-ctype": "*",
        "ext-gd": "*",
        "ext-hash": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-mysqli": "*",
        "ext-session": "*",
        "ext-zip": "*",
        "kuria/class-loader": "^1.0",
        "kuria/error": "^1.0",
        "kuria/debug": "^1.0",
        "kuria/event": "^1.0",
        "kuria/cache": "^1.0",
        "kuria/parser": "^1.0",
        "eloquent/pbkdf2-compat": "^1.0.1",
        "composer/semver": "^1.4.0",
        "doctrine/orm": "^2.4",
        "symfony/yaml": "^2.8",
        "twig/twig": "^1.3"
    },
    "config": {
        "platform": {
            "php": "5.3.29"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Sunlight\\Admin\\": "admin/class",
            "Sunlight\\": "system/class"
        }
    },
    "scripts": {
        "sunlight:doctrine": "Sunlight\\Database\\Doctrine\\Console::runAsComposerScript",
        "sunlight:clear-cache": "Sunlight\\Composer\\ComposerBridge::clearCache",
        "post-update-cmd": [
            "Sunlight\\Composer\\ComposerBridge::clearCache",
            "Sunlight\\Composer\\ComposerBridge::denyAccessToVendorDirectory"
        ],
        "post-install-cmd": [
            "Sunlight\\Composer\\ComposerBridge::clearCache",
            "Sunlight\\Composer\\ComposerBridge::denyAccessToVendorDirectory"
        ]
    }
}