{
    "type": "project",
    "license": "MIT",
    "repositories": [
        {
            "type": "path",
            "url": "./plugins/.composer/*",
            "options": {"symlink": false}
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "sunlight-cms/plugin-root": "dev-master",
        "kuria/class-loader": "^1.0",
        "kuria/error": "^1.0",
        "kuria/debug": "^1.0",
        "kuria/event": "^1.0",
        "kuria/cache": "^1.0",
        "kuria/parser": "^1.0",
        "eloquent/pbkdf2-compat": "^1.0.1",
        "composer/semver": "^1.4.0",
        "doctrine/orm": "^2.4",
        "symfony/yaml": "^2.8",
        "twig/twig": "^1.3"
    },
    "config": {
        "platform": {
            "php": "5.3.29"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Sunlight\\Admin\\": "admin/class",
            "Sunlight\\": "system/class"
        }
    },
    "scripts": {
        "doctrine": "Sunlight\\Database\\Doctrine\\Console::runAsComposerScript",
        "pre-update-cmd": "Sunlight\\Plugin\\ComposerBridge::linkPluginDependencies",
        "post-update-cmd": "Sunlight\\Plugin\\ComposerBridge::denyAccessToVendorDirectory",
        "post-install-cmd": "Sunlight\\Plugin\\ComposerBridge::denyAccessToVendorDirectory"
    }
}